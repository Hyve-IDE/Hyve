<idea-plugin>
  <extensions defaultExtensionNs="com.intellij">
    <fileType
        name="Hytale Model"
        language="JSON"
        implementationClass="com.hyve.blockbench.BlockbenchFileType"
        fieldName="INSTANCE"
        extensions="blockymodel;blockyanim"/>

    <fileEditorProvider
        implementation="com.hyve.blockbench.editor.BlockbenchTextEditorWithPreviewProvider"/>

    <notificationGroup
        id="Hyve Blockbench"
        displayType="BALLOON"
        isLogByDefault="true"/>

    <!-- Pre-warm JCEF so its one-time static-init warning lands at startup,
         not when a user opens a Blockbench file. -->
    <postStartupActivity implementation="com.hyve.blockbench.startup.JcefPrewarmActivity"/>
  </extensions>
  <actions>
    <!-- New Blockbench files â€” appears in right-click > New > Hytale -->
    <action
        id="HyveBlockbench.NewModel"
        class="com.hyve.blockbench.actions.NewBlockbenchModelAction"
        text="Blockbench Model"
        description="Create a new Blockbench model file (.blockymodel)"
        icon="AllIcons.FileTypes.Json">
      <add-to-group group-id="HytaleNewGroup"/>
    </action>

    <action
        id="HyveBlockbench.NewAnimation"
        class="com.hyve.blockbench.actions.NewBlockbenchAnimAction"
        text="Blockbench Animation"
        description="Create a new Blockbench animation file (.blockyanim)"
        icon="AllIcons.FileTypes.Json">
      <add-to-group group-id="HytaleNewGroup"/>
    </action>
  </actions>
</idea-plugin>
